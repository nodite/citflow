{
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"],
  "ts-node": {
    "esm": true
  }
}
